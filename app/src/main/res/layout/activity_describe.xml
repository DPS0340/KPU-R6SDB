<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".describeActivity">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/relativeLayout"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="#003458">

        </RelativeLayout>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical"/>
        </ScrollView>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:gravity="center">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="130dp" android:gravity="left" android:layout_weight="0.5"
                        android:weightSum="3">
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/sledge_picture"
                            android:id="@+id/picture" android:layout_weight="2"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:layout_weight="1">
                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" app:srcCompat="@drawable/sledge_logo"
                                android:id="@+id/logo" android:layout_weight="1"/>
                        <TextView
                                android:text="슬 레 지"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/name"
                                android:textAlignment="center"
                                android:textSize="30sp" android:textColor="@color/colorAccent"
                                android:layout_weight="1" app:autoSizeTextType="uniform"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_weight="0.3" android:weightSum="1">
                    <TextView
                            android:text="SAS"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7" android:id="@+id/org" android:textSize="30sp"
                            android:textColor="@color/colorAccent" android:textAlignment="center"
                            app:autoSizeTextType="uniform"/>
                    <TextView
                            android:text="미디엄 아머"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/armor" android:textAlignment="center"
                            android:textSize="28sp" android:textColor="@color/colorAccent" android:layout_weight="0.3"
                            app:autoSizeTextType="uniform"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:gravity="center">
                <TextView
                        android:text="특수 능력"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" android:id="@+id/ability" android:textAlignment="center"
                        android:textSize="28sp" android:textColor="@color/colorAccent" app:autoSizeTextType="uniform"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="39dp" android:id="@+id/textView5" android:textAlignment="center"
                        android:textSize="20sp" android:textColor="@color/colorAccent" android:text="파쇄 망치"
                        app:autoSizeTextType="uniform"/>
                <VideoView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/vv"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"/>

            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:gravity="center">
                <TextView
                        android:text="장 비"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView6" android:textAlignment="center"
                        android:textSize="28sp" android:textColor="@color/colorAccent" app:autoSizeTextType="uniform"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:weightSum="1">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:layout_weight="0.5">
                        <TextView
                                android:text="주 무기"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:textAlignment="center"
                                android:textSize="28sp" android:textColor="@color/colorAccent"
                                android:id="@+id/primary"/>
                        <TextView
                                android:text="M590A1 - 샷건"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" android:id="@+id/textView14"
                                android:textAlignment="center"
                                android:textSize="28sp" android:textColor="@color/colorAccent"
                                app:autoSizeTextType="uniform"/>
                        <TextView
                                android:text="L85A2 - 돌격소총"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" android:id="@+id/textView9"
                                android:textAlignment="center"
                                android:textSize="28sp" android:textColor="@color/colorAccent"
                                app:autoSizeTextType="uniform"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:layout_weight="0.5">
                        <TextView
                                android:text="보조 무기"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:textAlignment="center"
                                android:textSize="28sp" android:textColor="@color/colorAccent"
                                android:id="@+id/secondary"/>
                        <TextView
                                android:text="SMG-11 - 기관권총"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" android:id="@+id/textView11"
                                android:textAlignment="center"
                                android:textSize="28sp" android:textColor="@color/colorAccent"
                                app:autoSizeTextType="uniform"/>
                        <TextView
                                android:text="P226 Mk 25 - 권총"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" android:id="@+id/textView2"
                                android:textAlignment="center"
                                android:textSize="28sp" android:textColor="@color/colorAccent"
                                app:autoSizeTextType="uniform"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                        android:text="수류탄 x 2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView15"
                        android:textAlignment="center"
                        android:textSize="28sp" android:textColor="@color/colorAccent"/>
                <TextView
                        android:text="섬광탄 x 3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView13"
                        android:textAlignment="center"
                        android:textSize="28sp" android:textColor="@color/colorAccent"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>