<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".describeActivity">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/relativeLayout"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="#003458">

        </RelativeLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:gravity="center">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="130dp" android:gravity="left" android:layout_weight="1"
                        android:weightSum="2">
                    <ImageView
                            android:layout_width="571dp"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/sledge_picture"
                            android:id="@+id/imageView3" android:layout_weight="1"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:layout_weight="1">
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" app:srcCompat="@drawable/sledge"
                                android:id="@+id/imageView" android:layout_weight="1"/>
                        <TextView
                                android:text="슬 레 지"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView"
                                android:textAlignment="center"
                                android:textSize="30sp" android:textColor="@color/colorAccent"
                                android:layout_weight="0.5"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                        android:text="미디엄 아머"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView2" android:textAlignment="center"
                        android:textSize="28sp" android:textColor="@color/colorAccent" android:layout_weight="0.5"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:gravity="center">
                <TextView
                        android:text="특수능력"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView2" android:textAlignment="center"
                        android:textSize="28sp" android:textColor="@color/colorAccent"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView5" android:textAlignment="center"
                        android:textSize="20sp" android:textColor="@color/colorAccent" android:text="파쇄 망치"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:gravity="center">
                <TextView
                        android:text="장 비"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView6" android:textAlignment="center"
                        android:textSize="28sp" android:textColor="@color/colorAccent"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>